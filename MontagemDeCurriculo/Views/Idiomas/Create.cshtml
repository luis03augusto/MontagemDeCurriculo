@model MontagemDeCurriculo.Models.Idioma

@{
    ViewData["Title"] = "Cadastro de idioma";
}

<div class="formulario">

    <h5>@ViewData["Title"]</h5>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="CurriculoId" type="hidden" />
                <div class="row">
                    <div class="input-field col s6">
                        <input asp-for="Nome" class="validate" />
                        <label asp-for="Nome" class="control-label"></label>
                        <span asp-validation-for="Nome" class="red-text darken-3"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s6">
                        <input asp-for="Nivel" class="validate" />
                        <label asp-for="Nivel" class="control-label"></label>
                        <span asp-validation-for="Nivel" class="red-text darken-3"></span>
                    </div>
                </div>

                <div class="row">
                    <input type="submit" value="Salvar" class="btn btn-small green darken-1" /> &nbsp;
                    <a asp-action="Details" asp-controller="Curriculos" asp-route-id="@Model.CurriculoId">Voltar</a>
                </div>
            </form>
        </div>
    </div>

</div>
