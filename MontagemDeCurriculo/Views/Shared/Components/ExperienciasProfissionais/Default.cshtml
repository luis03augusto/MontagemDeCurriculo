@model IEnumerable<MontagemDeCurriculo.Models.ExperienciaProfissional>

@foreach (var item in Model)
{
    <li class="collection-item row">
        <div class="valign-wrapper col s10">
            @Html.DisplayFor(model => item.Cargo) em @Html.DisplayFor(model => item.NomeEmpresa)
            @Html.DisplayFor(model => item.AnoInicio) - @Html.DisplayFor(model => item.AnoFim) 
        </div>

        <div class="col s2 right">
            <a asp-controller="ExperienciaProfissionals" asp-action="Edit" asp-route-id="@item.ExperienciaProfissionalId" class="btn-floating btn-small blue darken-4"><i class="material-icons">edit</i></a>
            <a onclick="ExibirModal(@item.ExperienciaProfissionalId, 'ExperienciaProfissionals')" class="btn-floating btn-small red darken-4"><i class="material-icons">delete_forever</i></a>
        </div>
    </li>
} 