@model MontagemDeCurriculo.ViewModels.CurriculoViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" asp-append-version="true">
    <link href="~/vendor/font-awesome-5-css/css/all.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/vendor/materialize-css/css/materialize.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <title>Curriculo</title>
</head>
<body>

    <h5>Objetivos</h5>
    <hr />
    <p>
        <ul>
            @foreach (var item in Model.Objetivos)
            {
                <li>
                    @item.Descricao
                </li>
            }
        </ul>
    </p>

    <h5>Formações Acadêmicas</h5>
    <hr />
    <p>
        <ul>
            @foreach (var item in Model.FormacaoAcademicas)
            {
                <li>
                    @item.TipoCurso.Tipo em @item.NomeCurso,
                    @item.Instituicao, @item.AnoInicio - @item.AnoFim
                </li>
            }
        </ul>
    </p>

    <h5>Experiência Profissionais</h5>
    <hr />
    <p>
        <ul>
            @foreach (var item in Model.ExperienciaProfissionals)
            {
                <li>
                    @item.Cargo em @item.NomeEmpresa,
                    @item.AnoInicio - @item.AnoFim
                    <br />
                    @item.DescricaoAtividade
                </li>
            }
        </ul>
    </p>

    <h5>Idiomas</h5>
    <hr />
    <p>
        <ul>
            @foreach (var item in Model.Idiomas)
            {
                <li>
                    @item.Nome - @item.Nivel,
                </li>
            }
        </ul>
    </p>
</body>
</html>
